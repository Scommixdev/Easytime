<resources>

    <style name="Theme.Easytime" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_easytime</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Easytime</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Easytime</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Easytime</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Easytime</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Easytime</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_easytime</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_easytime</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Easytime</item>
        
        
    </style>

    <style name="ActionBar.Solid.Easytime" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_easytime</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_easytime</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_easytime</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Easytime</item>
    </style>

    <style name="ActionBar.Transparent.Easytime" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_easytime</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Easytime</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Easytime.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Easytime</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Easytime</item>
    </style>


</resources>
