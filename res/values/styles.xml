<resources>

    <style name="Theme.Easytime" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_easytime</item>
        <item name="popupMenuStyle">@style/PopupMenu.Easytime</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Easytime</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Easytime</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Easytime</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Easytime</item>
        <item name="actionModeBackground">@drawable/cab_background_top_easytime</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_easytime</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Easytime</item>

        
    </style>

    <style name="ActionBar.Solid.Easytime" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_easytime</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_easytime</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_easytime</item>
        <item name="progressBarStyle">@style/ProgressBar.Easytime</item>
    </style>

    <style name="ActionBar.Transparent.Easytime" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_easytime</item>
        <item name="progressBarStyle">@style/ProgressBar.Easytime</item>
    </style>
	
    <style name="PopupMenu.Easytime" parent="@style/Widget.AppCompat.Light.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_easytime</item>	
    </style>
	
    <style name="DropDownListView.Easytime" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_easytime</item>
    </style>

    <style name="ActionBarTabStyle.Easytime" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_easytime</item>
    </style>
	
    <style name="DropDownNav.Easytime" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_easytime</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_easytime</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_easytime</item>
    </style>
    
    <style name="ProgressBar.Easytime" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_easytime</item>
    </style>
    
    <style name="ActionButton.CloseMode.Easytime" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_easytime</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Easytime.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Easytime</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Easytime</item>
    </style>

</resources>
